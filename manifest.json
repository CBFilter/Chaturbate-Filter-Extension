{
  "manifest_version": 3,
  "name": "Chaturbate Chat Filter",
  "version": "0.9",

  "description": "toggle chat filter from notifications",
  "icons": {
    "48": "resource/48.ico"
  },

  "content_scripts": [
    {
      "matches": ["*://chaturbate.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "resource/tick-svgrepo-com.svg",
        "resource/cross-svgrepo-com.svg",
        "headerscript.js"
      ],
      "matches": ["*://chaturbate.com/*"]
    }
  ]
}
